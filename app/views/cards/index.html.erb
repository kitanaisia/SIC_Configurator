<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<%= page_entries_info @cards %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= link_to '選択', card %></td>
        <td><%= card.number %></td>
        <td><%= card.name %></td>
        <td><%= card.skill %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @cards %>

